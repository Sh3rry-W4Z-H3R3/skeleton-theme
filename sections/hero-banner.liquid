<!-- === hero-banner.liquid === -->
<section class="hero-banner">
  <!-- Top Navigation Bar -->
  <div class="hero-nav">
    <div class="nav-content">
      <span class="nav-text">SHOP THE SUMMER COLLECTION</span>
      <div class="search-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="21 21l-4.35-4.35"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Main Hero Content -->
  <div class="hero-content">
    <!-- Left: Hero Image -->
    <div class="hero-image-section">
      <img
        src="{{ 'hero_image.png' | asset_url }}"
        alt="Black wicker outdoor dining set with table and chairs"
        width="600"
        height="800"
        loading="eager"
        class="hero-image"
      >
    </div>

    <!-- Right: Pattern & Wordmark -->
    <div class="hero-text-section">
      <div class="pattern-background" style="background-image: url('{{ 'BackgrndPattern.png' | asset_url }}');"></div>
      <div class="hero-text-content">
        <img
          src="{{ 'WORDMARKAsset 19@3x.png' | asset_url }}"
          alt="Andra's Garden Heaven wordmark"
          width="350"
          height="200"
          class="wordmark"
        >
        <div class="hero-description">
          <p>Elevate your living space with our globally inspired collection of handmade furniture, where <span class="underline-text">craftsmanship meets contemporary luxury.</span></p>
        </div>
      </div>
    </div>
  </div>
</section>