<section class="section featured-products">
  <div class="wrapper featured-products-wrapper">
    <h2 class="section-title" style="text-align: center; margin: 3rem 0; color: var(--green); font-size: 2.5rem;">
        Featured Rattan Pieces</h2>
    <ul class="product-grid">
      {% for product in collections.frontpage.products %}
        <li class="product-item">
          <a href="{{ product.url }}">
<img src="{{ product.featured_image | image_url: '600x600' }}" alt="{{ product.title }}" width="600" height="600">            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
